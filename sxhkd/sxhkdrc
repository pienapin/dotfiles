#
# wm independent hotkeys
#

# terminal emulator
super + {Return,shift + Return}
  bspc rule -a \* -o state={tiled,floating} && alacritty

# program launcher
super + BackSpace
	rofi -show drun

super + r
	rofi -show run

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# screenshot
Print
	flameshot gui

# explorer
super + {e,shift + e}
  bspc rule -a \* -o state={tiled,floating} && dolphin

#
# widget
#

# bar

super + p
	eww open --toggle powermenu

super + b
	/home/pien/.config/polybar/scripts/launch.sh

super + n
	notifications

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# focus next node in same monitor
super + Tab
	bspc node -f next.window.local

# alternate between the tiled and monocle layout
super + comma
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

#
# state/flags
#

# set the window state
super + {c,shift + c,v,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the next/previous desktop in the current monitor
super + {a,t}
	bspc desktop -f {prev,next}.local

super + s
	bspc monitor -f next

# focus or send to the given desktop
super + shift + {1-9,0}
	bspc node -d '^{1-9,10}'

super + {1-9,0}
	bspc desktop -f '^{1-9,10}'

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# jgmenu
~button3
    bspc query -D -d .focused.!occupied && jgmenu_run

shift + ~button3
    xdo id -N Bspwm -n root && jgmenu_run
